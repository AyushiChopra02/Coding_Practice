https://leetcode.com/problems/find-n-unique-integers-sum-up-to-zero/description/?envType=daily-question&envId=2025-09-07


class Solution {
    public int[] sumZero(int n) {
        int[] a = new int[n];
        int idx = 0;

        if (n % 2 != 0) {
            a[idx++] = 0;
        }

        for (int i = 1; i <= n / 2; i++) {
            a[idx++] = i;
            a[idx++] = -i;
        }

        return a;
    }
}
